# Server Configuration
PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zena

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth - Gmail
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/accounts/email/callback

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3001/api/accounts/email/callback

# OAuth - Yahoo Mail
# Get credentials from: https://developer.yahoo.com/apps/
YAHOO_CLIENT_ID=your-yahoo-client-id
YAHOO_CLIENT_SECRET=your-yahoo-client-secret
YAHOO_REDIRECT_URI=http://localhost:3001/api/accounts/email/callback

# OAuth - Google Calendar (can reuse Google credentials if same OAuth app)
GOOGLE_CALENDAR_CLIENT_ID=your-google-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3001/api/accounts/calendar/callback

# OAuth - Microsoft Calendar (can reuse Microsoft credentials if same OAuth app)
MICROSOFT_CALENDAR_CLIENT_ID=your-microsoft-calendar-client-id
MICROSOFT_CALENDAR_CLIENT_SECRET=your-microsoft-calendar-client-secret
MICROSOFT_CALENDAR_REDIRECT_URI=http://localhost:3001/api/accounts/calendar/callback

# LLM API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_API_ENDPOINT=https://api.openai.com/v1/chat/completions
ANTHROPIC_API_KEY=your-anthropic-api-key

# Speech Services
SPEECH_TO_TEXT_API_KEY=your-stt-api-key
TEXT_TO_SPEECH_API_KEY=your-tts-api-key

# Storage
S3_BUCKET=zena-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key

# Redis
REDIS_URL=redis://localhost:6379

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here # Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))" to generate
# Monitoring and Logging
LOG_LEVEL=info                                    # debug, info, warn, error, fatal
SLOW_REQUEST_THRESHOLD=1000                       # Milliseconds
METRICS_TOKEN=your-secret-metrics-token           # Required for /metrics in production

# Alerts
ALERTS_ENABLED=false                              # Enable/disable alerts
ALERT_CHANNELS=log                                # Comma-separated: log,email,webhook
ALERT_WEBHOOK_URL=                                # Webhook URL (e.g., Slack webhook)
ALERT_EMAIL_RECIPIENTS=                           # Comma-separated email addresses

# External Monitoring (Optional)
SENTRY_DSN=                                       # Sentry DSN for error tracking
DATADOG_API_KEY=                                  # Datadog API key
