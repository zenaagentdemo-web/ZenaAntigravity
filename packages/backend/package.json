{
  "name": "@zena/backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "test:db:setup": "bash scripts/setup-test-db.sh",
    "test:db:migrate": "dotenv -e .env.test -- prisma migrate deploy",
    "test:db:reset": "dotenv -e .env.test -- prisma migrate reset --force",
    "test:db:seed": "dotenv -e .env.test -- tsx prisma/seed.ts",
    "test:yahoo": "tsx scripts/test-yahoo-connection.ts",
    "add:yahoo": "tsx scripts/add-yahoo-account.ts",
    "reclassify": "tsx scripts/reclassify-emails.ts",
    "diagnose:ai": "tsx scripts/diagnose-ai-classification.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.1",
    "mailparser": "^3.9.0",
    "pg": "^8.11.2",
    "web-push": "^3.6.6",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/imap": "^0.8.42",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.4.5",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/web-push": "^3.6.3",
    "@types/ws": "^8.5.5",
    "dotenv-cli": "^7.3.0",
    "fast-check": "^3.15.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "vitest": "^4.0.15"
  }
}
