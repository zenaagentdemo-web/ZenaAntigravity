# Zena AI Real Estate PWA - Production Environment Variables
# Copy this file to .env and fill in your production values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3000
API_URL=https://api.yourdomain.com

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://zena_user:CHANGE_ME@localhost:5432/zena_production

# Connection pool settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# Redis Configuration
# ============================================
# Redis connection string
# Format: redis://username:password@host:port
REDIS_URL=redis://:CHANGE_ME@localhost:6379

# Enable TLS for Redis (true/false)
REDIS_TLS_ENABLED=true

# ============================================
# JWT Authentication
# ============================================
# Generate secure random strings (minimum 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_ME_TO_DIFFERENT_SECURE_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# OAuth - Google (Gmail & Calendar)
# ============================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/accounts/email/callback

# ============================================
# OAuth - Microsoft (Outlook & Calendar)
# ============================================
# Get credentials from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=https://api.yourdomain.com/api/accounts/email/callback

# ============================================
# LLM API Configuration
# ============================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# OR Anthropic Configuration (comment out OpenAI if using Anthropic)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
# ANTHROPIC_MODEL=claude-3-sonnet-20240229
# ANTHROPIC_MAX_TOKENS=2000

# ============================================
# Speech Services
# ============================================
# OpenAI Whisper for Speech-to-Text
OPENAI_WHISPER_API_KEY=sk-your-openai-api-key

# Google Speech-to-Text (optional alternative)
# GOOGLE_SPEECH_API_KEY=your-google-speech-api-key

# Text-to-Speech provider (openai or google)
TTS_PROVIDER=openai

# ============================================
# AWS S3 Storage
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
S3_BUCKET_NAME=zena-production-storage
S3_ENDPOINT=https://s3.amazonaws.com

# ============================================
# Email Sending (SMTP)
# ============================================
# For notifications and system emails
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=SG.your-sendgrid-api-key
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Zena AI

# ============================================
# Push Notifications (Web Push)
# ============================================
# Generate VAPID keys with:
# node -e "const webpush = require('web-push'); const keys = webpush.generateVAPIDKeys(); console.log('Public:', keys.publicKey); console.log('Private:', keys.privateKey);"
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ============================================
# Monitoring and Logging
# ============================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# Rate Limiting
# ============================================
# Time window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Background Jobs
# ============================================
# Email sync interval in minutes
EMAIL_SYNC_INTERVAL=5

# Calendar sync interval in minutes
CALENDAR_SYNC_INTERVAL=15

# AI processing batch size
AI_PROCESSING_BATCH_SIZE=10

# ============================================
# Feature Flags
# ============================================
# Enable/disable features
ENABLE_VOICE_NOTES=true
ENABLE_ASK_ZENA=true
ENABLE_CRM_INTEGRATION=true
ENABLE_EXPORT=true
ENABLE_PUSH_NOTIFICATIONS=true

# ============================================
# CRM Integration (Optional)
# ============================================
# MRI Vault
# MRI_VAULT_API_KEY=your-mri-vault-api-key
# MRI_VAULT_API_URL=https://api.mrivault.com

# Salesforce
# SALESFORCE_CLIENT_ID=your-salesforce-client-id
# SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
# SALESFORCE_REDIRECT_URI=https://api.yourdomain.com/api/integrations/crm/salesforce/callback

# ============================================
# Security
# ============================================
# Encryption key for sensitive data (32 bytes)
ENCRYPTION_KEY=CHANGE_ME_TO_SECURE_RANDOM_32_BYTE_STRING

# Session secret
SESSION_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING

# ============================================
# Performance
# ============================================
# Node.js memory limit (in MB)
NODE_OPTIONS=--max-old-space-size=2048

# Enable clustering (true/false)
ENABLE_CLUSTERING=true

# Number of worker processes (0 = auto-detect CPU cores)
WORKER_PROCESSES=0
