{
  "name": "zena-ai-real-estate",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/frontend",
    "packages/backend"
  ],
  "scripts": {
    "dev": "concurrently --kill-others -n \"back,front\" -c \"bgBlue.bold,bgGreen.bold\" \"npm run dev -w packages/backend\" \"npm run dev -w packages/frontend\"",
    "clean": "kill -9 $(lsof -t -i:3001 -i:5173 2>/dev/null) 2>/dev/null || true",
    "predev": "npm run clean",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "three": "^0.160.0"
  }
}